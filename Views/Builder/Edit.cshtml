@model Showcase.Models.BuilderModel
@{
    ViewData["Title"] = "Create a new builder";
}

@section css {
    <link href="@Url.Content("~/css/createBuilder.css")" rel="stylesheet" type="text/css" />
}

<div class="container">

  <form asp-controller="Builder" asp-action="Edit">
    <div class="form-row">
        <div class="form-group col-md-6">
          <label for="BuilderName">Construction Company Name</label>
          <input asp-for="BuilderName" type="text" class="form-control" placeholder="Company Name" value="@Model.BuilderName" />
        </div>
        <div class="form-group col-md-6">
          <label for="Email">Company Email</label>
          <input asp-for="Email" type="text" class="form-control" placeholder="Company Email" value="@Model.Email" />
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
  </form>
</div>