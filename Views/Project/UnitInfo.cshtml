@model Showcase.Models.UnitsModel
@{
    ViewData["Title"] = "Unit Details";
	int pricePerSqft = @Model.Price / @Model.FloorSpaceSqft;
}
@section css {
    <link href="@Url.Content("~/css/unitInfo.css")" rel="stylesheet" type="text/css" />
}


<div class="container">
	<a asp-controller="Project" asp-action="ProjectDetails" asp-route-id="@Model.projectId" >
		<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-left-short" fill="currentColor"
			xmlns="http://www.w3.org/2000/svg">
			<path fill-rule="evenodd" d="M12 8a.5.5 0 0 1-.5.5H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5a.5.5 0 0 1 .5.5z"/>
		</svg>
        Return
	</a>
	<h1>All you need to know about condo Unit # @Model.UnitNo</h1>
	<div class="row">
		<div id="detail-card" class="row ml-4">
			<div>
				<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-columns" fill="currentColor"
					xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" d="M15 2H1v12h14V2zM1 1a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H1z"/>
					<path fill-rule="evenodd" d="M7.5 14V2h1v12h-1zm0-8H1V5h6.5v1zm7.5 5H8.5v-1H15v1z"/>
				</svg>
				<span>Foor space: </span> @Model.FloorSpaceSqft sqft
			</div>
			<div class="separator ml-2 mr-2"></div>
			<div>
				<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-droplet-half" fill="currentColor"
					xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" d="M7.21.8C7.69.295 8 0 8 0c.109.363.234.708.371 1.038.812 1.946 2.073 3.35 3.197 4.6C12.878 7.096 14 8.345 14 10a6 6 0 0 1-12 0C2 6.668 5.58 2.517 7.21.8zm.413 1.021A31.25 31.25 0 0 0 5.794 3.99c-.726.95-1.436 2.008-1.96 3.07C3.304 8.133 3 9.138 3 10c0 0 2.5 1.5 5 .5s5-.5 5-.5c0-1.201-.796-2.157-2.181-3.7l-.03-.032C9.75 5.11 8.5 3.72 7.623 1.82z"/>
					<path fill-rule="evenodd" d="M4.553 7.776c.82-1.641 1.717-2.753 2.093-3.13l.708.708c-.29.29-1.128 1.311-1.907 2.87l-.894-.448z"/>
				</svg>
				<span>@Model.BathCount washrooms</span>
			</div>
			<div class="separator ml-2 mr-2"></div>
			<div>
				<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-house-fill" fill="currentColor"
					xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" d="M8 3.293l6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6zm5-.793V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z"/>
					<path fill-rule="evenodd" d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z"/>
				</svg>
				<span>@Model.BedCount Bedrooms</span>
			</div>
			<div class="separator ml-2 mr-2"></div>
			<div>
				<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-cash-stack" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
					<path d="M14 3H1a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1h-1z"/>
 					<path fill-rule="evenodd" d="M15 5H1v8h14V5zM1 4a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1V5a1 1 0 0 0-1-1H1z"/>
  					<path d="M13 5a2 2 0 0 0 2 2V5h-2zM3 5a2 2 0 0 1-2 2V5h2zm10 8a2 2 0 0 1 2-2v2h-2zM3 13a2 2 0 0 0-2-2v2h2zm7-4a2 2 0 1 1-4 0 2 2 0 0 1 4 0z"/>
				</svg>
				<span>$@pricePerSqft.ToString("N0") per sqft</span>
			</div>
		</div>
	</div>

    <div class="row mt-3" >
        <div class="col-md-4" >
            <h3 >Starting from $@String.Format( "{0:#,##0.##}", @Model.Price) ! </h3>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col-md-10">
            <p>
                @Model.UnitDesc
				@Model.UnitDesc
				@if(@Model.AdditionalInfo != null)
				{
					@Model.AdditionalInfo
				}
				@Model.UnitDesc
				@Model.UnitDesc
				@if(@Model.AdditionalInfo != null)
				{
					@Model.AdditionalInfo
				}
            </p>
        </div>
    </div>
</div>