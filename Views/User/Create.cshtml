@model Showcase.Models.UserModel
@{
  ViewData["Title"] = "Index";
}


<div>
  <h2>Add New User</h2>

  <form asp-controller="User" asp-action="CreateNewUser">
    <div class="form-group">
      <label for="Name">Full name</label>
      <input asp-for="Name" type="text" class="form-control" placeholder="Your name" />
    </div>

    <div class="form-group">
      <label for="Email">Email address</label>
      <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>